{
    "manifest_version": 2,
    "name": "Video Call Transcriber and Summarizer",
    "version": "1.0",
    "description": "Transcribes and summarizes video calls",
    "permissions": [
      "activeTab",
      "storage",
      "https://*/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    }
  }